<h1>Edificios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direcci√≥n</th>
      <th>Ciudad</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td><%= building.city %></td>
        <td><%= building.user_id %></td>
        <%# <td><%= link_to 'Show', building %></td> %>
        <td><%= link_to building do %> 
              <i class="bi bi-eye"></i>
            <% end %>
        </td>
        <td><%= link_to edit_building_path(building) do %> 
              <i class="bi bi-pencil-square"></i>
            <% end %>
        </td>
        <%# <td><%= link_to 'Edit', edit_building_path(building) %></td> %>
        <td>
          <%= link_to  building, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="bi bi-trash"></i> 
          <% end %>
        </td>
        <td><%= link_to '<i class="fa-trash-o"></i>.html_safe' , building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%# <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td> %>
      </tr>
    <% end %>
  </tbody>
</table>

